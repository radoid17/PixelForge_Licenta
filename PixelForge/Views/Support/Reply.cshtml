@model PixelForge.Models.SupportMessage

<h2>Reply: @Model.Title</h2>

<p><strong>Message sent by @Model.Author.FirstName @Model.Author.SecondName:</strong></p>
<p>@Model.Content</p>

<form asp-action="Reply" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="reply">Your answer:</label>
        <textarea name="reply" class="form-control" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Send Answer</button>
</form>
