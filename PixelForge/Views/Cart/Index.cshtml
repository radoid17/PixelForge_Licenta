@model List<PixelForge.Models.CartItem>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.Title</td>
                    <td>$@game.Price</td>
                    <td>
                        <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@game.GameId" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
            <form method="post" asp-action="Buy" asp-controller="Cart">
                <button type="submit" class="btn btn-success">Purchase</button>
            </form>
        </tbody>
    </table>
}
