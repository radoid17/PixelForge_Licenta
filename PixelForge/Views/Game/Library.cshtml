@model List<PixelForge.Models.Game>
@{
    ViewData["Title"] = "Library";
}

<h3>Library</h3>

<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-action="Library" asp-controller="Game">
            <input name="searchString" class="form-control me-1 w-50" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-dark" type="submit">Search By Title</button>
        </form>
    </div>
    <div class="col-md-10 mt-3">
        <a asp-action="Library" class="text-dark">Back to Full List</a>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th><a class="text-dark" asp-controller="Game" asp-action="Library" asp-route-sortOrder=@ViewData["NameSortParam"]>Title</a></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ownedGames in Model)
        {
            <tr>
                <td>@ownedGames.Title</td>
                <td>
                    @if (!string.IsNullOrEmpty(ownedGames.GameFilePath))
                    {
                        <a asp-action="Download" asp-route-id="@ownedGames.Id" class="btn btn-primary">Download</a>
                    }
                    else
                    {
                        <span class="text-muted">No File</span>
                    }
                </td>

                <td>
                    <form asp-controller="Review" asp-action="Create" method="post" class="d-inline">
                        <input type="hidden" name="gameId" value="@ownedGames.Id" />
                        <select name="rating" class="form-select d-inline w-auto">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <input name="comment" placeholder="Comment" class="form-control d-inline w-auto" />
                        <button type="submit" class="btn btn-primary">Review</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>