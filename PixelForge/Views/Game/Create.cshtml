@model PixelForge.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h3>Create an item</h3>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" step="0.01">
    </div>

    <div class="form-group">
        <label for="gameFile">Upload Game File (.zip, .rar, .exe, .msi)</label>
        <input type="file" class="form-control" name="gameFile" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in (IEnumerable<string>)ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
